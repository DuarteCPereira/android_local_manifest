<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <remote name="raspberryVanillaGithub" fetch="https://github.com/raspberry-vanilla/" />
  <remote name="mainScopeGithub" fetch="https://github.com/DuarteCPereira/" />

  <!-- Raspberry Pi -->
  <project path="device/brcm/rpi4" name="android_device_brcm_rpi4" remote="mainScopeGithub" revision="android-14.0" >
    <linkfile src="mkimg.sh" dest="rpi4-mkimg.sh" />
  </project>
  <project path="device/brcm/rpi5" name="android_device_brcm_rpi5" remote="raspberryVanillaGithub" revision="android-14.0" >
    <linkfile src="mkimg.sh" dest="rpi5-mkimg.sh" />
  </project>
  <project path="device/brcm/rpi4-kernel" name="android_device_brcm_rpi4-kernel" remote="raspberryVanillaGithub" revision="android-14.0-portrait" />
  <project path="device/brcm/rpi5-kernel" name="android_device_brcm_rpi5-kernel" remote="raspberryVanillaGithub" revision="android-14.0" />
  <project path="vendor/brcm" name="proprietary_vendor_brcm" remote="raspberryVanillaGithub" revision="android-14.0" />

  <!-- Audio -->
  <project path="external/alsa-lib" name="android_external_alsa-lib" remote="raspberryVanillaGithub" revision="android-14.0" />
  <project path="external/alsa-utils" name="android_external_alsa-utils" remote="raspberryVanillaGithub" revision="android-14.0" />

  <!-- Build -->
  <remove-project name="platform/build" />
  <remove-project name="platform/build/soong" />
  <project path="build/make" name="android_build" remote="raspberryVanillaGithub" revision="android-14.0" >
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="build/soong" name="android_build_soong" remote="raspberryVanillaGithub" revision="android-14.0" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <!-- Camera -->
  <project path="external/libcamera" name="android_external_libcamera" remote="raspberryVanillaGithub" revision="android-14.0" />
  <project path="external/libpisp" name="android_external_libpisp" remote="raspberryVanillaGithub" revision="android-14.0" />
  <project path="external/libyaml" name="android_external_libyaml" remote="raspberryVanillaGithub" revision="android-14.0" />
  <project path="external/libyuv_chromium" name="android_external_libyuv_chromium" remote="raspberryVanillaGithub" revision="android-14.0" />

  <!-- FFmpeg -->
  <remove-project name="platform/external/libdav1d" />
  <project path="external/ffmpeg" name="android_external_ffmpeg" remote="raspberryVanillaGithub" revision="android-14.0" />
  <project path="external/ffmpeg_codec2" name="android_external_ffmpeg_codec2" remote="raspberryVanillaGithub" revision="android-14.0" />
  <project path="external/libdav1d" name="android_external_libdav1d" remote="raspberryVanillaGithub" revision="android-14.0" />
  <project path="external/libudev-zero" name="android_external_libudev-zero" remote="raspberryVanillaGithub" revision="android-14.0" />

  <!-- Graphics -->
  <remove-project name="platform/external/drm_hwcomposer" />
  <remove-project name="platform/external/libdrm" />
  <remove-project name="platform/external/mesa3d" />
  <remove-project name="platform/external/minigbm" />
  <project path="external/drm_hwcomposer" name="android_external_drm_hwcomposer" remote="raspberryVanillaGithub" revision="android-14.0" />
  <project path="external/libdrm" name="android_external_libdrm" remote="raspberryVanillaGithub" revision="android-14.0" />
  <project path="external/mesa3d" name="android_external_mesa3d" remote="raspberryVanillaGithub" revision="android-14.0" />
  <project path="external/minigbm" name="android_external_minigbm" remote="raspberryVanillaGithub" revision="android-14.0" />

  <!-- v4l2_codec2 -->
  <remove-project name="platform/external/v4l2_codec2" />
  <project path="external/v4l2_codec2" name="android_external_v4l2_codec2" remote="raspberryVanillaGithub" revision="android-14.0" />

  <!-- Wifi -->
  <remove-project name="platform/external/wpa_supplicant_8" />
  <remove-project name="platform/packages/modules/Wifi" />
  <project path="external/wpa_supplicant_8" name="android_external_wpa_supplicant_8" remote="raspberryVanillaGithub" revision="android-14.0" />
  <project path="packages/modules/Wifi" name="android_packages_modules_Wifi" remote="raspberryVanillaGithub" revision="android-14.0" />

</manifest>
